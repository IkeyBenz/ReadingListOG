<form action="/signup" method="POST" class="container card bg-light mx-auto mt-5 px-0">
    <div class="card-header">
        <h3 class="card-title">Sign Up</h3>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label for="name">Full Name: <b class="text-danger">*</b></label>
            <input class="form-control" type="text" name="name" placeholder="Joe Smith" required>
        </div>
        <div class="form-group">
            <label for="email">Email: <b class="text-danger">*</b></label>
            <input class="form-control" type="email" name="email" placeholder="joe.smith@example.com" required>
        </div>
        <div class="form-group">
            <label for="password">Password: <b class="text-danger">*</b></label>
            <input class="form-control" type="password" name="password" placeholder="********" required>
        </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-primary" type="submit">Sign Up</button>
    </div>
</form>